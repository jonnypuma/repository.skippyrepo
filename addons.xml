name: Build Kodi Repository

on:
  push:
    branches:
      - main
    paths:
      - 'zips/**'

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          ref: main
          fetch-depth: 0

      - name: Install zip tools
        run: sudo apt-get install -y zip unzip

      - name: Build addons.xml and Extract Assets
        run: |
          echo "<?xml version='1.0' encoding='UTF-8'?>" > addons.xml
          echo "<addons>" >> addons.xml
          
          find zips -name "*.zip" | while read zipfile; do
            echo "Processing: $zipfile"
            addon_dir=$(dirname "$zipfile")
            
            # 1. Extract the addon.xml for the master list
            XML_PATH=$(unzip -Z1 "$zipfile" | grep "addon.xml" | head -n 1)
            if [ -n "$XML_PATH" ]; then
              unzip -p "$zipfile" "$XML_PATH" | grep -v '<?xml' >> addons.xml
            fi
            
            # 2. Extract all images (png, jpg, jpeg) from the addon root inside the zip
            # -j: junk paths (don't create subfolders)
            # -o: overwrite existing files
            # The pattern looks for icon, fanart, or screenshot with any image extension
            unzip -j -o "$zipfile" "*icon.png" "*icon.jpg" "*fanart.png" "*fanart.jpg" "*screenshot*" -d "$addon_dir" || echo "Some assets not found in $zipfile"
          done
          
          echo "</addons>" >> addons.xml

      - name: Generate MD5
        run: md5sum addons.xml | awk '{print $1}' > addons.xml.md5

      - name: Update index.html version
        run: |
          NEW_VERSION=$(ls zips/repository.skippyrepo/*.zip | grep -oP '(?<=repository.skippyrepo-)[0-9.]+(?=.zip)' | head -n 1)
          if [ ! -z "$NEW_VERSION" ]; then
            echo "Updating index.html to version: $NEW_VERSION"
            sed -i "s/repository.skippyrepo-[0-9.]*\.zip/repository.skippyrepo-$NEW_VERSION.zip/g" index.html
          fi

      - name: Commit and push changes
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          # Adding all images extracted by the unzip command
          git add addons.xml addons.xml.md5 index.html zips/**/*.png zips/**/*.jpg zips/**/*.jpeg || echo "No images to add"
          git commit -m "Auto-update repo files and assets [skip ci]" || echo "No changes"
          git push origin main
